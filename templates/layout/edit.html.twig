
<title>Edit Deck</title>


<a href="{{ path('show_deck', {'deckID': deck.id}) }}">Retour aux détails du deck</a>

<h3>Carte du deck</h3>
<div class="col-lg-12" id='cardsInDeckEdit'>
    <div class="row">
        {% for cardDeck in cardsInDeck %}
            <div class="col-lg-2 col-md-4 mb-5">
                <div class="card" style="background-image: url('uploads/cards/{{cardDeck.card.image}}'); background-size: cover; background-repeat: no-repeat;background-position: center center;">
                    <input class="idCardDeck_delete" type="hidden" value='{{ cardDeck.id }}'>
                    <input class="idCard_delete" type="hidden" value='{{ cardDeck.card.id }}'>
                    <input class="idDeck_delete" type="hidden" value='{{ cardDeck.deck.id }}'>
                    <div class="cardHeader">
                        <span>{{ cardDeck.card.cardname }} ({{ cardDeck.card.faction.factionname }})</span>
                    </div>
                    <div class="cardImage"></div>
                    <div class="cardFooter">
                        <div class="cardNumber" style="color:blue"> {{ cardDeck.card.attackpoints }} </div>
                        <div class="cardNumber" style="color:red"> {{ cardDeck.card.manacost }} </div>
                        <div class="cardNumber" style="color:green"> {{ cardDeck.card.lifepoints }} </div>
                    </div>
                </div>
            </div>
        {% else %}
            Aucune carte n'a été ajouté au deck
        {% endfor %}
    </div>
</div>


<h3>Carte Disponible</h3>


<div class="col-lg-12" id='cardsInStorage'>
    <div class="row">
        {% for card in cardsListStorage %}
            <div class="col-lg-2 col-md-4 mb-5">
                <div class="card" style="background-image: url('uploads/cards/{{ card.image}}'); background-size: cover; background-repeat: no-repeat;background-position: center center;">
                    <input class="idCard_add" type="hidden" value='{{ card.id }}'>
                    <input class="idDeck_add" type="hidden" value='{{ deck.id }}'>
                    <div class="cardHeader">
                        <span>{{ card.cardname }} ({{ card.faction.factionname }})</span>
                    </div>
                    <div class="cardImage"></div>
                    <div class="cardFooter">
                        <div class="cardNumber" style="color:blue"> {{ card.attackpoints }} </div>
                        <div class="cardNumber" style="color:red"> {{ card.manacost }} </div>
                        <div class="cardNumber" style="color:green"> {{ card.lifepoints }} </div>
                    </div>
                </div>
        {% else %}
            Aucune carte n'a été créé
        {% endfor %}
         </div>
    </div>
</div>